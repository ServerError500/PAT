#include <stdio.h>
int main() {
    int n=0;
    int step=0;
    scanf("%d",&n);
    if (n>1000||n<0)
    {
        return 0;
    }
    while (n!=1)
    {
        if (n%2==0)
        {
            n =n/2;
        }
       else if (1==n%2)
        {
            n=(3*n+1)/2;
        }
       step++;
    }
    printf("%d",step);
}
